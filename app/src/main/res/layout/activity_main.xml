<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#f0f0f0"
        app:contentPadding="5dp">

        <TextView
            android:id="@+id/your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginTop="0dp"
            android:layout_marginStart="18dp"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/schedules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginTop="45dp"
            android:layout_marginStart="18dp"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/welcomeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/inter_semibold"/>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top_nav">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_background2"
            android:elevation="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <Button
                        android:id="@+id/btn_prev"
                        android:fontFamily="@font/inter_bold"
                        android:onClick="previousMonthAction"
                        android:gravity="left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="&#60;"
                        android:textColor="#ffffff"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/monthYearTV"
                        android:fontFamily="@font/inter_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="MONTH YEAR"
                        />

                    <Button
                        android:id="@+id/btn_next"
                        android:gravity="right"
                        android:onClick="nextMonthAction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="&gt;"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SUN"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MON"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TUE"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="WED"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="THU"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FRI"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SAT"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calendarRecyclerView"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginVertical="15dp"
            android:text="Latest Schedule"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/inter_semibold"
            />

        <RelativeLayout
            android:id="@+id/schedule1"
            android:layout_width="369dp"
            android:layout_height="120dp"
            android:layout_gravity="center"


            android:background="@drawable/rounded_edge"
            android:elevation="5dp"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginStart="8dp"
                    android:text="00:00 PM"
                    android:textSize="23sp"
                    android:translationX="0dp"
                    android:translationY="-12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationX="-10dp"
                    android:text="YEAR/MM/DD"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="12sp"
                    android:translationY="-15dp"
                    app:layout_constraintEnd_toEndOf="@+id/timeText"
                    app:layout_constraintStart_toStartOf="@+id/timeText"
                    app:layout_constraintTop_toBottomOf="@+id/timeText" />

                <TextView
                    android:id="@+id/meetnameText"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Scheduled Cellophane Meeting #2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:translationX="55dp"
                    android:translationY="-20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/meetdescriptionText"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:justificationMode="inter_word"
                    android:lines="2"
                    android:maxLines="2"
                    android:fontFamily="@font/inter_regular"
                    android:text="Ganon po rules sa family po namin once nagpabili ako ng need sa school ay meron po tubo sakin."
                    android:textSize="10sp"
                    android:translationX="19dp"
                    android:translationY="-33dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/meetnameText"
                    app:layout_constraintTop_toBottomOf="@+id/meetnameText" />

                <TextView
                    android:id="@+id/meetlinkText"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:text="https://meetings.example.com/j/1234567890?pwd=abc123def456"
                    android:textSize="8sp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/viewAllSched"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginBottom="40dp"
            android:translationY="15dp"
            android:background="@drawable/gradient_background3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="View all schedules"
            android:fontFamily="@font/inter_medium"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:elevation="30dp"
            />

    </LinearLayout>


