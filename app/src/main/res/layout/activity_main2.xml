<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".MainActivity2">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#f0f0f0"
        app:contentPadding="5dp">

        <TextView
            android:id="@+id/your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginTop="0dp"
            android:layout_marginStart="18dp"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/schedules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginTop="45dp"
            android:layout_marginStart="18dp"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/welcomeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your new schedule here."
            android:layout_marginStart="20dp"
            android:layout_marginTop="105dp"
            android:paddingVertical="7dp"
            android:fontFamily="@font/inter_semibold"/>

    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_nav"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_layout_background"
                android:elevation="@dimen/_10sdp">

                <EditText
                    android:id="@+id/nameSet"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_layout_background"
                    android:ems="15"
                    android:hint="Name:"
                    android:inputType="text"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_layout_background"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="YYYY-MM-DD"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/datePicker"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="250dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/gradient_background3"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Pick"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_layout_background"
                android:elevation="@dimen/_10sdp">

                <EditText
                    android:id="@+id/descriptionSet"
                    android:layout_width="311dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_layout_background"
                    android:ems="15"
                    android:gravity="top|start"
                    android:hint="Description:"
                    android:inputType="textMultiLine|text"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/input_layout_background"
                android:elevation="@dimen/_10sdp">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="HH:MM"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/timePicker"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="250dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/gradient_background3"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Pick"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_layout_background"
                android:elevation="@dimen/_10sdp">

                <EditText
                    android:id="@+id/linkSet"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_layout_background"
                    android:ems="15"
                    android:hint="Link:"
                    android:inputType="text"
                    android:textSize="17sp" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="41dp"
                app:cardBackgroundColor="#f8f9fa"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp">

                <EditText
                    android:id="@+id/noteSet"
                    android:layout_width="311dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_layout_background"
                    android:ems="15"
                    android:gravity="top|start"
                    android:hint="Notes:"
                    android:inputType="textMultiLine|text"
                    android:textSize="17sp" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/submitSchedButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradient_background3"
                android:elevation="30dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Save Schedule"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@drawable/nav_rectangle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:translationY="7.5dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/home_icon"
                />


            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/add_sched_icon"
                android:translationY="8dp"
                />

            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:translationY="7.5dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/profile_icon"
                />

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:translationY="7.5dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/more_icon"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:translationY="55dp">

            <TextView
                android:id="@+id/homeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/addText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="Add"
                android:textColor="#000000"
                android:textSize="12.5sp"
                android:translationX="-1dp" />

            <TextView
                android:id="@+id/profileText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#000000"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/moreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="More"
                android:textColor="#000000"
                android:textSize="12.5sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
