<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".MainActivity2">


    <androidx.cardview.widget.CardView
        android:id="@+id/topNav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#BBDEFB"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:translationY="@dimen/_minus5sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="New Appointment"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:translationX="@dimen/_10sdp"
                android:translationY="@dimen/_minus32sdp"
                android:backgroundTint="#BBDEFB"
                app:srcCompat="@drawable/chevron_backward" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="743dp"
        app:cardBackgroundColor="#f8f9fa"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nameSet"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_layout_background"
            android:ems="15"
            android:hint="Name:"
            android:inputType="text"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="231dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="656dp"
        app:cardBackgroundColor="#f8f9fa"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/dateSet"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_layout_background"
            android:ems="15"
            android:hint="Date:"
            android:inputType="date" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="484dp"
        app:cardBackgroundColor="#f8f9fa"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/descriptionSet"
            android:layout_width="311dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_layout_background"
            android:ems="15"
            android:hint="Description:"
            android:inputType="text"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="496dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="391dp"
        app:cardBackgroundColor="#f8f9fa"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/TimeSet"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_layout_background"
            android:ems="15"
            android:hint="Time:"
            android:inputType="text"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="585dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="302dp"
        app:cardBackgroundColor="#f8f9fa"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/linkSet"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_layout_background"
            android:ems="15"
            android:hint="Link:"
            android:inputType="text"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="672dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="177dp"
        app:cardBackgroundColor="#f8f9fa"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/noteSet"
            android:layout_width="311dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_layout_background"
            android:ems="15"
            android:hint="Notes:"
            android:inputType="text"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/nav_rectangle"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:translationY="7.5dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/homev2"
                />

            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/addv2"
                android:translationY="8dp"
                />

            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:translationY="7.5dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/profilev2"
                />

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:translationY="7.5dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/menu"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:translationY="55dp">

            <TextView
                android:id="@+id/homeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home"
                android:textColor="#000000"
                android:gravity="center"
                android:fontFamily="@font/inter_regular"
                android:textSize="12.5sp"
                />

            <TextView
                android:id="@+id/addText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add"
                android:textColor="#000000"
                android:gravity="center"
                android:fontFamily="@font/inter_regular"
                android:translationX="-1dp"
                android:textSize="12.5sp"
                />

            <TextView
                android:id="@+id/profileText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:textColor="#000000"
                android:gravity="center"
                android:fontFamily="@font/inter_regular"
                android:textSize="12.5sp"
                />

            <TextView
                android:id="@+id/moreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="More"
                android:textColor="#000000"
                android:gravity="center"
                android:fontFamily="@font/inter_regular"
                android:textSize="12.5sp"
                />

        </LinearLayout>

    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>